mixin section(title)
  section
    .container
      .row
        h2= title
        block

mixin occasion(imgTitle, title = '')
  - var desc = 'Опис основних випадків, в котрих сервіс буде корисним, і з якими частіше за все стикаються наші користувачі'
  - var classes = title ? colClasses[4] + ' card' : colClasses[6]

  article.col-sm-12(class = classes)
    if !title
      .icon
      p= desc
    else
      //- figure.img_wrap
      img.img_wrap-img(src='/img/' + imgTitle + '.jpg' alt=imgTitle)
      section.card-body
        h3= title
        p= desc

mixin service(title, imgTitle = 0)
  - var shortList = ['', ', детальна інформація', ', інформація', '']
  -
    var longList = [
      'Визначення порядку участі у вихованні та утриманні дитини',
      'Визнання (оскарження) права на батьківство',
      'Усунення перешкод у спілкуванні з дітьми, онуками',
      'Розроблення договору про добровільну сплату аліментів',
      'Розроблення шлюбного договору',
      'Представництво інтересів під час вирішення сімейних спорів у судах, органах опіки та піклування'
    ]

  article.card.col
    if imgTitle
      //- figure.img_wrap
      img.img_wrap-img(src='/img/' + imgTitle + '.jpg' alt=imgTitle)
    section.card-body
      h3= title
      ul
        if imgTitle
          each item, index in longList
            li= item
        else
          each item, index in shortList
            li= 'Пункт ' + (index + 1) + item
      a.btn Більше послуг &gt;

mixin serviceForm(colClasses)
  article.card.col(class = colClasses)
    section.card-body
      h3 Не знаєте що обрати?
      p Пройдіть тест і дізнайтеся, яка послуга вам більше підходить
      a.btn Вибрати послугу

mixin packageServiceLI(key, value, disabled = false)
  //- li.row(class = {'disabled': disabled})
  li.row.d-flex(class = {'text-muted': disabled})
    .col= key
    .col.text-end= value

mixin packageService(title, price, count = 0, list = [])
  - var cond = count > 0
  -
    var items = cond
      ? list
      : ['Усні медичні консультації', 'Усні юридичні консультації']
  - var itemValue = cond ? 1 : 4
  - var subTag = 'sub'
  - var priceStr = (cond ? '<' + subTag + '> від </' + subTag + '> ' : '') + price + ' грн'

  article.col
    h3= title
    div
      b !{priceStr}
      ul
        each item, index in items
          +packageServiceLI(item, itemValue, cond && index >= count)
      a.btn Замовити
